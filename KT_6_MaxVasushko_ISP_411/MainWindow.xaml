<Window x:Class="KT_6_MaxVasushko_ISP_411.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KT_6_MaxVasushko_ISP_411"
        mc:Ignorable="d"
        Icon="/Resources/Icon.ico"
        Title="{Binding ElementName=frameContainer, Path=Content.Title}" Height="640" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="530"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF76E383">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Image Grid.Column="0" Source="/Resources/logo.png" HorizontalAlignment="Right"></Image>
            <Label Grid.Column="1" Grid.ColumnSpan="2" Content="ООО «Товары для животных»" VerticalAlignment="Center" Width="300" HorizontalAlignment="Left" Margin="20,0,0,0"></Label>
        </Grid>
        
        <Frame Grid.Row="1" x:Name="frameContainer" NavigationUIVisibility="Hidden"></Frame>

    </Grid>
</Window>
