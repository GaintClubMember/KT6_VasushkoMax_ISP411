<Page x:Class="KT_6_MaxVasushko_ISP_411.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KT_6_MaxVasushko_ISP_411.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>

        <StackPanel Width="140">
            <Label Content="Логин:" HorizontalAlignment="Left"></Label>
            <TextBox x:Name="loginBox"></TextBox>
            <Label Content="Пароль:" HorizontalAlignment="Left"></Label>
            <PasswordBox x:Name="passwordBox"></PasswordBox>

            <Button x:Name="acceptBtn" Click="acceptBtn_Click" Content="Авторизоваться" Margin="0,10,0,0"></Button>
            <Button x:Name="guestBtn" Click="guestBtn_Click" Content="Гость" Margin="0,30,0,0"></Button>
        </StackPanel>
        
    </Grid>
</Page>
